<div class="container">
  <h2> <%= resource_name.to_s.humanize %>情報を編集する</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="row mb-3">
      <%= f.label :名前 %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>
    <div class="row mb-3">
      <%= f.label :Slackの名前 %><br />
      <%= f.text_field :slack_name, autofocus: true %>
    </div>
    <div class="row mb-3">
      <%= f.label :写真を添付, class: "form-label" %>
      <%= f.file_field :image, class: "form-control"%>
    </div>
    <div class="row mb-3">
      <%= f.label :プロフィール %><br />
      <%= f.text_area :profile, autofocus: true %>
    </div>


    <div class="row mb-3">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="row mb-3">
      <%= f.label :パスワード（変更しない場合は空白） %> <br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> 文字以上</em>
      <% end %>
    </div>

    <div class="row mb-3">
      <%= f.label :確認用パスワード（上記のパスワードをもう一度入力してください） %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="row mb-3">
      <%= f.label :現在のパスワード（変更するには現在のパスワードを入力してください） %> <br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>

    <div class="actions">
      <%= f.submit "更新する", class: "btn btn-outline-danger"%>
    </div>
  <% end %>

  <h3>退会する方はこちら</h3>

  <p> <%= button_to "退会する", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-outline-danger" %></p>

  <%= link_to "戻る", :back %>
</div>