<div class="container">
  <h1>GIITA</h1>
    <h3>投稿を検索</h3>
    <%= form_tag({controller:"posts",action:"index"}, method: :get) do %>
    <%= text_field_tag :search %>
    <%= submit_tag '検索する'  %>
    <% end %>
  <h3>投稿一覧</h3>
  <br>
 

  <div class="row row-cols-1 row-cols-md-3 g-4">
      <% @posts.each do |t| %>
        <div class="col">
          <div class="card" style="width: 18rem;">
          <svg class="bd-placeholder-img card-img-top" width="100%" height="180" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Image cap"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"/><text x="40%" y="50%" fill="#dee2e6" dy=".2em"></text></svg>
            <div class="card-body">
              <h5 class="card-title"><%= t.title %></h5>
              <h6 class="card-subtitle mb-2 text-muted"><%= t.user.name %></h6>
              <h6 class="card-subtitle mb-2 text-muted"><%= t.user.slack_name %></h6>
              <p class="card-text"><%= t.body %></p>
              <a href="/posts/<%= t.id %>” class="card-link">詳しく見る</a>
              
            </div>
          </div> 
        </div>   
        <% end %>
    
  </div>
</div> 


