<div class="container">
  <h1>GIITA</h1>
    <h3>投稿を検索</h3>
    <%= form_tag({controller:"posts",action:"index"}, method: :get) do %>
    <%= text_field_tag :search %>
    <%= submit_tag '検索する'  %>
    <% end %>
  <h3>投稿一覧</h3>
  <br>
 

  <div class="row row-cols-1 row-cols-md-3 g-4">
      <% @posts.each do |t| %>
        <div class="col-4">
          <div class="card" style="width: 18rem;">
          <%# image_tag(t.user.image_url), class: "card-img-top"  %>
          <%= image_tag t.user.image_url , class: "card-img-top" if t.user.image? %>
            <div class="card-body">
              <h5 class="card-title"><%= t.title %></h5>
              <h6 class="card-subtitle mb-2 text-muted"><%= t.user.name %></h6>
              <h6 class="card-subtitle mb-2 text-muted"><%= t.user.slack_name %></h6>
              <p class="card-text"><%= t.body %></p>
              <a href="/posts/<%= t.id %>” class="card-link">詳しく見る</a>
              
            </div>
          </div> 
        </div>   
        <% end %>
    
  </div>
</div> 


